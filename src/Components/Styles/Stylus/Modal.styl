@import "../../../Styles/Stylus/_Global";
.Modal 
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index 5
    &__container 
        background-color VeryDarkViolet
        color white
        position: relative;
        top: 10rem;       
        padding: 1rem;
        width: 400px;
        border-radius 20px
        & form
            display flex
            flex-direction column
            & label 
                margin-bottom 5px
                margin-top 10px
                font-weight bold
            & input
                border none
                box-shadow 1px 1px 20px 6px rgba(0,0,0,0.5);
                border-radius 10px
                height 1.5em
                padding 0 0.5em
                &:focus
                    outline none
            & button 
                border-radius 30px
                margin-top 25px

    &__close-button 
        color white
        position: absolute;
        top: 0;
        right: 0;
        border: 0;
        background-color: #F5F5F5;
        padding: 0.3rem 0.3rem;
        background-color red
        font-weight bold
        border-radius 0 20px 0 0
