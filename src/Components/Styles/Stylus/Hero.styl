@import "../../../Styles/Stylus/_Global";
.Hero
  display flex
  margin 60px auto
  padding 0
  &__TextContainer
    align-self center
    & h1
      font-size 4em
      font-weight WeightBolder
      margin 0
    & p
      max-width 500px
      color Gray
      font-size 1.1em
      margin-bottom 1em
      margin-right 0
    & button
      border-radius 30px
      &:active
        background-color CyanLight
@media screen and (max-width: 767px)
  .Hero
    flex-direction column-reverse
    overflow hidden
    &__TextContainer
      text-align center
      margin 50px
      & p
        font-size 1.5em
        max-width none



